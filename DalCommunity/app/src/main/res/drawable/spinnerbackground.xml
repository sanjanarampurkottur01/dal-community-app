<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color, white for the Spinner itself -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <stroke
                android:width="1dp"
            android:color="@android:color/holo_purple" /> <!-- Border color, using the default primary color -->
            <corners android:radius="8dp" /> <!-- Border corner radius -->
        </shape>
    </item>
    <!-- Arrow drawable -->
    <item android:drawable="@drawable/dropdown_arrow"
    android:right="8dp"
    android:gravity="end|center_vertical" />
</layer-list>