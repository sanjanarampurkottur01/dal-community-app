<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.csci5708.dalcommunity.activity.CreatePollPostActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/create_poll_post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/poll_post_question_input"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded"
        android:hint="@string/what_do_you_want_to_poll"
        android:gravity="top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_poll_post_toolbar" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/poll_post_option_1"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded"
        android:hint="@string/option_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poll_post_question_input" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/poll_post_option_2"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded"
        android:hint="@string/option_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poll_post_option_1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/poll_post_option_3"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded"
        android:hint="@string/option_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poll_post_option_2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/poll_post_option_4"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded"
        android:hint="@string/option_4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poll_post_option_3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_poll_post_button"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/btnbackground"
        android:text="@string/create_poll"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poll_post_option_4" />

</androidx.constraintlayout.widget.ConstraintLayout>