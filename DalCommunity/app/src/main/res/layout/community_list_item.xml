<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/profile_imageTv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:background="@drawable/community_image_shape"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Community Name"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:id="@+id/communityChatNameTv"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Community Name"
            android:textColor="@color/dark_gray"
            android:layout_weight="1"
            android:id="@+id/communityMemberCount"
            android:textSize="14sp"/>

    </LinearLayout>


    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/add_filled_circle"
        android:id="@+id/communityJoinBt"
        android:layout_gravity="center_vertical"/>

</LinearLayout>


